    "source",
    "verifier",
    "widget",
    "sources"
  ],
  "dependencies": {
    "@aws-crypto/sha256-js": "^2.0.2",
    "@orbs-network/ton-gateway": "^1.3.0",
    "bn.js": "^5.2.1",
    "esbuild-plugin-polyfill-node": "^0.0.2",
    "highlight.js": "^11.6.0",
    "highlightjs-func": "^0.3.0",
    "ton": "^12.1.3"
  },
  "devDependencies": {
    "@types/bn.js": "^5.1.1",
    "esbuild": "^0.15.10",
